{
    "name": "first-pro-project",
    "version": "1.0.0",
    "description": "A sample project to demonstrate ESLint and TypeScript setup",
    "main": "index.js",
    "scripts": {
        "start:prod": "node ./dist/server.js",
        "start:dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "preti": "prettier --ignore-path .gitignore --write \"./src/**/*.+(js|ts|json)\"",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "eslint",
        "typescript",
        "nodejs"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "joi": "^17.13.3",
        "mongoose": "^8.6.2",
        "validator": "^13.12.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.10.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/validator": "^13.12.2",
        "eslint": "^9.10.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^15.9.0",
        "prettier": "3.3.3",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.6.0"
    }
}
